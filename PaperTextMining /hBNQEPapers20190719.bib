journal = {Nano Letters},
keywords = {Single-photon sources,Stark effect,hexagonal boron nitride,van der Waals heterostructures},
number = {8},
pages = {4710--4715},
title = {{Stark Tuning of Single-Photon Emitters in Hexagonal Boron Nitride}},
