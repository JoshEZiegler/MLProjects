@article{Jungwirth2017,
abstract = {We investigate the polarization selection rules of sharp zero-phonon lines (ZPLs) from isolated defects in hexagonal boron nitride (h-BN) and compare our findings with the predictions of a configuration coordinate model involving two electronic states. Our survey, which spans the spectral range {\~{}}550-740 nm, reveals that, in disagreement with a two-level model, the absorption and emission dipoles are often misaligned. We relate the dipole misalignment angle ({\$}{\{}\backslashDelta{\}}{\{}\backslashtheta{\}}{\$}) to the ZPL Stokes shift ({\$}{\{}\backslashDelta{\}}E{\$}) and find that {\$}{\{}\backslashDelta{\}}{\{}\backslashtheta{\}}\backslashsim 0{\{}\backslashdeg{\}}{\$} when {\$}{\{}\backslashDelta{\}}E{\$} corresponds to an allowed h-BN phonon frequency and that {\$}0{\{}\backslashdeg{\}}\backslashleq{\{}\backslashDelta{\}}{\{}\backslashtheta{\}}\backslashleq 90{\{}\backslashdeg{\}}{\$} when {\$}{\{}\backslashDelta{\}}E{\$} exceeds the maximum allowed h-BN phonon frequency. Consequently, a two-level configuration coordinate model succeeds at describing excitations mediated by the creation of one optical phonon but fails at describing excitations that require the creation of multiple phonons. We propose that direct excitations requiring the creation of multiple phonons are inefficient due to the low Huang-Rhys factors in h-BN and that these ZPLs are instead excited indirectly via an intermediate electronic state. This hypothesis is corroborated by polarization measurements of an individual ZPL excited with two distinct wavelengths that indicate a single ZPL may be excited by multiple mechanisms. These findings provide new insight on the nature of the optical cycle of novel defect-based single photon sources in h-BN.},
