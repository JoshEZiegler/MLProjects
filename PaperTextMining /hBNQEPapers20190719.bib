file = {:C$\backslash$:/Users/CooperMkII/Paper/1901.05952.pdf:pdf},
pages = {1--15},
title = {{Correlated optical and electron microscopy reveal the role of multiple defect species and local strain on quantum emission}},
url = {http://arxiv.org/abs/1901.05952},
year = {2019}
}
@article{Schell2017,
